<div>
    <p class="comment_title">Comment by <%= comment.author_name %></p>
    <p class="comment_text"><%= comment.body %></p>
    <p class="comment_date"><%= comment.created_at.strftime("Posted %B %d, %Y at %l:%M%P - ") %>
    <% if logged_in? %>
    <%= link_to 'Delete', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' }%>
    <% end %>
</div>