<div class="container"><h2>Login</h2></div>
<%= form_tag author_sessions_path, :class => "login", method: :post do %>
    <div class="field">
        <%= label_tag :email %><br />
        <%= text_field_tag :email %><br /><br />
    </div>
    <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password %><br /><br />
    </div>
    <div class="field">
        <%= submit_tag "Login" %>
    </div>
<% end %>
<%= link_to 'Back', articles_path, :class => "back_link" %>