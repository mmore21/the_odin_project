<div class="container"><h2>Tag: <%= @tag.name %></h2></div>
<div class="article_body">

<ul>
    <h1>The following articles have the <%= @tag.name %> tag:</h1>
    <% @tag.articles.each do |article| %>
        <li class="tag"><%= link_to article.title, article_path(article) %></li>
    <% end %><br /><br />

    <% if logged_in? %>
        <%= link_to 'Delete Tag', tag_path(@tag), method: :delete, data: { confirm: 'Are you sure?' }, :class => "button" %>
    <% end %>
    
    <%= link_to 'Back to Tags', tags_path, :class => "button" %>
</ul>
</div>