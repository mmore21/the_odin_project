<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ], class: "form" do |f| %>
    <p>
        <%= f.label :author_name, "Your Name" %><br />
        <%= f.text_field :author_name, class: "text_field" %>
    </p>
    <p>
        <%= f.label :body, "Your Comment" %><br />
        <%= f.text_area :body, size: "33x3" %>
    </p>
    <p>
        <%= f.submit 'Submit' %>
    </p>
<% end %>